    "resources": [
        {
            "id": "flow:GetBook",
            "data": {
                "name": "GetBook",
                "description": "",
                "links": [
                    {
                        "id": 1,
                        "from": "LogMessage",
                        "to": "Return",
                        "type": "default"
                    }
                ],
                "tasks": [
                    {
                        "id": "LogMessage",
                        "name": "LogMessage",
                        "description": "Simple Log Message Activity",
                        "activity": {
                            "ref": "#log",
                            "input": {
                                "Log Level": "INFO",
                                "flowInfo": false,
                                "message": "=string.concat(\"Received a GetBook request for book ID: [\", $flow.pathParams.bookID, \"] Title: [\", $flow.queryParams.title, \"] RequestID: [\",$flow.headers[\"X-Request-ID\"], \"]\")"
                            }
                        }
                    },
                    {
                        "id": "Return",
                        "name": "Return",
                        "description": "Simple Return Activity",
                        "activity": {
                            "ref": "#actreturn",
                            "settings": {
                                "mappings": {
                                    "code": 200,
                                    "data": {
                                        "mapping": {
                                            "id": "=$flow.pathParams.bookID",
                                            "title": "=$flow.queryParams.title",
